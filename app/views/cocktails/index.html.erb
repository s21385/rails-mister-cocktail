<%= link_to 'Add a Cocktail', new_cocktail_path %>

<% @cocktails.each do |cocktail| %>
  <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
    <% cocktail.doses.each do |dose| %>
    <p><strong></strong><%= dose.ingredient.name.capitalize %></p>
    <p><strong></strong><%= dose.description.capitalize %></p>
    <% end %>
<% end %>
